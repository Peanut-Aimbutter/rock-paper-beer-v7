{
  "name": "rock-paper-beer-local",
  "version": "1.0.0",
  "description": "Local Rock Paper Beer multiplayer game - migrated from Base44",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=apps/server",
    "dev:client": "npm run dev --workspace=apps/client",
    "build": "npm run build --workspace=packages/game-logic && npm run build --workspace=apps/client && npm run build --workspace=apps/server",
    "start": "npm run start --workspace=apps/server",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write .",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
